<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true">
        <shape>
            <corners
                android:radius="6.0mm" />
            <stroke
                android:width="2.0mm"
                android:color="@color/color_FFFFFF" />
            <solid
                android:color="@color/color_6C3D3D3D" />
        </shape>
    </item>
    <item
        android:state_focused="false">
        <shape>
            <corners
                android:radius="7.0mm" />
            <solid
                android:color="@color/color_6C3D3D3D" />
        </shape>
    </item>
</selector>
