<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/root"
        android:background="@drawable/shape_dialog_bg_main"
        android:padding="@dimen/vs_30"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/testll"
            android:weightSum="2.0">
            <TextView
                android:textSize="@dimen/ts_24"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/checkAll"
                android:background="@drawable/button_dialog_main"
                android:padding="@dimen/vs_12"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="全选"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/root"
                android:layout_weight="1.0"/>
            <TextView
                android:textSize="@dimen/ts_24"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/clearAll"
                android:background="@drawable/button_dialog_main"
                android:padding="@dimen/vs_12"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/vs_10"
                android:text="全不选"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/root"
                android:layout_weight="1.0"/>
        </LinearLayout>
        <com.owen.tvrecyclerview.widget.TvRecyclerView
            android:layout_marginTop="@dimen/vs_10"
            android:orientation="vertical"
            android:id="@+id/mGridView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_max="370mm"
            app:layout_constraintTop_toBottomOf="@+id/testll"
            app:tv_horizontalSpacingWithMargins="@dimen/vs_10"
            app:tv_layoutManager="V7LinearLayoutManager"
            app:tv_selectedItemIsCentered="true"
            app:tv_verticalSpacingWithMargins="@dimen/vs_10"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
