<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_bg_main"
        android:padding="@dimen/vs_20"
        android:layout_width="@dimen/vs_480"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/ts_24"
            android:textStyle="bold"
            android:textColor="@color/color_CC000000"
            android:id="@+id/resetation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vs_5"
            android:layout_marginBottom="@dimen/vs_10"
            android:text="确定重置将清除配置"
            android:layout_centerHorizontal="true"/>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ts_22"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btnConfirm"
                android:background="@drawable/button_dialog_main"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:clickable="true"
                android:layout_margin="@dimen/vs_10"
                android:text="确定"
                android:maxLines="1"
                android:layout_weight="1.0"/>
            <TextView
                android:textSize="@dimen/ts_22"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btnCancel"
                android:background="@drawable/button_dialog_main"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:clickable="true"
                android:layout_margin="@dimen/vs_10"
                android:text="取消"
                android:maxLines="1"
                android:layout_weight="1.0"/>
        </TableRow>
    </LinearLayout>
</FrameLayout>
