                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:paddingStart="@dimen/vs_10"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vs_10">
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@color/color_FFFFFF"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="选择"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_next"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="下一集"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_pre"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="上一集"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_retry"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="重播"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_refresh"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="刷新"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_scale"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="16:9"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_speed"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="x1.0"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_player"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="系统播放器"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_ijk"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="硬解码"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@color/color_FFFFFF"
                android:id="@+id/play_time_start_end_text"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="片头片尾"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_time_start"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="01:00"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_time_end"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="01:00"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/play_time_reset"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="重置"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/zimu_select"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="字幕"
                android:singleLine="true"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/audio_track_select"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="音轨"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:id="@+id/landscape_portrait"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="横竖屏"
                android:layout_marginEnd="@dimen/vs_5"/>
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:layout_gravity="right"
                android:id="@+id/tv_play_load_net_speed_right_top"
                android:tag="vod_control_pause_time"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0Kb/s"
                android:maxLines="1"
                android:layout_marginEnd="@dimen/vs_0"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/parse_root"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vs_10">
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@color/color_FFFFFF"
                android:layout_gravity="center"
                android:background="@drawable/button_dialog_main_1"
                android:padding="@dimen/vs_10"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/vs_5"
                android:text="解析"
                android:layout_marginEnd="@dimen/vs_5"/>
            <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/mGridView"
                android:paddingRight="@dimen/vs_10"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:tv_horizontalSpacingWithMargins="@dimen/vs_5"
                app:tv_selectedItemIsCentered="true"
                app:tv_verticalSpacingWithMargins="@dimen/vs_5"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/tv_pause_container"
        android:tag="vod_control_pause"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_gravity="left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vs_15"
            android:layout_marginTop="@dimen/vs_0"
            android:layout_marginStart="@dimen/vs_15">
            <TextView
                android:textSize="@dimen/ts_20"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:layout_gravity="left"
                android:id="@+id/tv_info_name"
                android:paddingLeft="@dimen/vs_15"
                android:paddingTop="@dimen/vs_40"
                android:layout_width="@dimen/vs_960"
                android:layout_height="wrap_content"
                android:text="http://"
                android:singleLine="true"
                android:marqueeRepeatLimit="marquee_forever"/>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vs_0"
            android:layout_marginRight="@dimen/vs_15">
            <TextView
                android:textSize="@dimen/ts_40"
                android:textColor="@android:color/white"
                android:ellipsize="end"
                android:layout_gravity="right"
                android:id="@+id/tv_sys_time_xu"
                android:paddingTop="@dimen/vs_30"
                android:paddingRight="@dimen/vs_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:maxLines="1"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
