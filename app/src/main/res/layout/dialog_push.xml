<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/shape_dialog_bg_main"
    android:paddingLeft="@dimen/vs_20"
    android:paddingTop="@dimen/vs_10"
    android:paddingRight="@dimen/vs_20"
    android:paddingBottom="@dimen/vs_10"
    android:layout_width="@dimen/vs_600"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vs_10"
            android:layout_marginBottom="@dimen/vs_10"
            android:layout_marginRight="@dimen/vs_10">
            <TextView
                android:textSize="@dimen/ts_24"
                android:textStyle="bold"
                android:textColor="@color/color_80000000"
                android:gravity="center"
                android:layout_width="@dimen/vs_214"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/vs_20"
                android:text="远端聚汇影视地址"
                android:layout_marginEnd="@dimen/vs_20"/>
            <EditText
                android:textSize="@dimen/ts_24"
                android:textColor="@color/color_80000000"
                android:textColorHint="@color/color_6C3D3D3D"
                android:gravity="center"
                android:id="@+id/etAddr"
                android:background="@drawable/input_search_1"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:layout_width="@dimen/vs_200"
                android:layout_height="@dimen/vs_50"
                android:hint="推送 IP 地址"
                android:maxLength="15"
                android:maxLines="1"
                android:layout_weight="1.0"
                android:inputType="text"/>
            <TextView
                android:textSize="@dimen/ts_24"
                android:textStyle="bold"
                android:textColor="@color/color_80000000"
                android:gravity="end|center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/vs_10"
                android:layout_marginRight="@dimen/vs_10"
                android:text=":"
                android:layout_marginStart="@dimen/vs_10"
                android:layout_marginEnd="@dimen/vs_10"/>
            <EditText
                android:textSize="@dimen/ts_24"
                android:textColor="@color/color_80000000"
                android:textColorHint="@color/color_6C3D3D3D"
                android:gravity="center"
                android:layout_gravity="end|center"
                android:id="@+id/etPort"
                android:background="@drawable/input_search_1"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:nextFocusDown="@+id/btnConfirm"
                android:maxWidth="@dimen/vs_70"
                android:minWidth="@dimen/vs_70"
                android:layout_height="@dimen/vs_50"
                android:hint="端口"
                android:maxLines="1"
                android:maxLength="5"
                android:layout_weight="1.0"
                android:inputType="number"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/vs_10">
            <TextView
                android:textSize="@dimen/ts_24"
                android:textStyle="bold"
                android:textColor="@color/color_80000000"
                android:gravity="center"
                android:layout_width="@dimen/vs_160"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/vs_10"
                android:paddingRight="@dimen/vs_10"
                android:layout_marginRight="@dimen/vs_20"
                android:text="当前 IP 地址   "
                android:layout_marginEnd="@dimen/vs_20"/>
            <TextView
                android:textSize="@dimen/ts_24"
                android:textColor="@color/color_80000000"
                android:textColorHint="@color/color_6C3D3D3D"
                android:gravity="center"
                android:id="@+id/etCurrent"
                android:paddingLeft="@dimen/vs_0"
                android:paddingRight="@dimen/vs_20"
                android:focusable="false"
                android:clickable="false"
                android:layout_width="@dimen/vs_200"
                android:layout_height="@dimen/vs_50"
                android:maxLines="1"
                android:layout_weight="1.0"
                android:inputType="text"/>
            <TextView
                android:textSize="@dimen/ts_24"
                android:textStyle="bold"
                android:textColor="@color/color_80000000"
                android:gravity="end|center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/vs_10"
                android:layout_marginRight="@dimen/vs_10"
                android:text=""
                android:layout_marginStart="@dimen/vs_10"
                android:layout_marginEnd="@dimen/vs_10"/>
            <TextView
                android:textSize="@dimen/ts_24"
                android:textColor="@android:color/white"
                android:textColorHint="@color/color_6C3D3D3D"
                android:gravity="center"
                android:layout_gravity="end|center"
                android:id="@+id/btnConfirm"
                android:background="@drawable/button_dialog_main"
                android:focusable="true"
                android:nextFocusDown="@+id/btnConfirm"
                android:clickable="true"
                android:paddingLeft="13mm"
                android:paddingRight="13mm"
                android:maxWidth="@dimen/vs_76"
                android:minWidth="@dimen/vs_76"
                android:layout_height="@dimen/vs_50"
                android:text="推送"
                android:maxLines="1"
                android:layout_weight="1.0"/>
            <TextView
                android:textSize="@dimen/vs_20"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:id="@+id/btnCancel"
                android:background="@drawable/button_dialog_main"
                android:padding="@dimen/vs_10"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="@dimen/vs_120"
                android:layout_height="wrap_content"
                android:text="To-Do"
                android:layout_weight="1.0"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
