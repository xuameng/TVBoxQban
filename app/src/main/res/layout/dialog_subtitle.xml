<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/shape_dialog_bg_main"
        android:padding="@dimen/vs_30"
        android:layout_width="@dimen/vs_570"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/ts_22"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/selectInternal"
                android:background="@drawable/button_dialog_main"
                android:paddingTop="@dimen/vs_10"
                android:paddingBottom="@dimen/vs_10"
                android:focusable="true"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/vs_10"
                android:text="选择内置字幕"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/ts_22"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/selectLocal"
                android:background="@drawable/button_dialog_main"
                android:paddingTop="@dimen/vs_10"
                android:paddingBottom="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="选择本地字幕"
                android:maxLines="1"/>
            <TextView
                android:textSize="@dimen/ts_22"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/selectRemote"
                android:background="@drawable/button_dialog_main"
                android:paddingTop="@dimen/vs_10"
                android:paddingBottom="@dimen/vs_10"
                android:focusable="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vs_10"
                android:text="在线搜索字幕"
                android:maxLines="1"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vs_10">
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleSizeMinus"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字号减小"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="@dimen/ts_40"
                    android:textStyle="bold"
                    android:textColor="@color/color_CC000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleSizeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:layout_weight="1.0"/>
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleSizePlus"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字号增大"
                    android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vs_10">
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleStyleOne"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字幕样式一"
                    android:maxLines="1"
                    android:shadowColor="@color/color_CC000000"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="2.0"/>
                <TextView
                    android:textSize="@dimen/ts_40"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:layout_weight="1.0"/>
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textStyle="bold"
                    android:textColor="@color/color_02F8E1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleStyleTwo"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字幕样式二"
                    android:maxLines="1"
                    android:shadowColor="@color/color_CC000000"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="2.0"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vs_10">
                <TextView
                    android:textSize="@dimen/ts_26"
                    android:textColor="@color/color_85000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="字幕延时仅对外挂字幕有效"
                    android:maxLines="1"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vs_10">
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleTimeMinus"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字幕提前"
                    android:maxLines="1"/>
                <TextView
                    android:textSize="@dimen/ts_40"
                    android:textStyle="bold"
                    android:textColor="@color/color_CC000000"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:maxLines="1"
                    android:layout_weight="1.0"/>
                <TextView
                    android:textSize="@dimen/ts_22"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/subtitleTimePlus"
                    android:background="@drawable/button_dialog_main"
                    android:paddingTop="@dimen/vs_10"
                    android:paddingBottom="@dimen/vs_10"
                    android:focusable="true"
                    android:layout_width="@dimen/vs_170"
                    android:layout_height="wrap_content"
                    android:text="字幕推迟"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
